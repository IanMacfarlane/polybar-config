[colors]
background = #AA000000
background-alt = #333333
foreground = #ffb9c7
primary = #e21f46
secondary = #e60053
alert = #bd2c40

[bar/right]
monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 22
fixed-center = true
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2

padding-right = 1

module-margin-left = 1
module-margin-right = 1

font-0 = Monospace:size=13;1

modules-left = i3
modules-center = date
modules-right = pulseaudio cpu memory filesystem wlan vpn

tray-position = right

cursor-click = pointer
cursor-scroll = ns-resize

[bar/left]
monitor = ${env:MONITOR:DVI-D-0}
width = 100%
height = 22
fixed-center = true
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2

padding-right = 1

module-margin-left = 1
module-margin-right = 1

font-0 = Monospace:size=13;1

modules-left = i3
modules-center = date
modules-right = pulseaudio cpu memory filesystem wlan vpn

tray-position = right

cursor-click = pointer
cursor-scroll = ns-resize

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
label-mounted = Storage %percentage_used%%

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
pin-workspaces = true

label-mode-padding = 2
label-mode-background = ${colors.primary}

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-padding = 1

label-visible = %index%
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

[module/cpu]
type = internal/cpu
interval = 2
label = Processor %percentage%%

[module/memory]
type = internal/memory
interval = 2

label = Memory %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp1s0f0u2
interval = 3.0

format-connected = <label-connected>
label-connected = %essid%
format-disconnected = <label-disconnected>
label-disconnected = No Wifi

[module/date]
type = internal/date
interval = 5

date = %Y-%m-%d
time = %H:%M
label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume>
label-volume = Sound %percentage%%
label-muted = ðŸ”‡ muted

[module/vpn]
type = custom/script
interval = 1
exec = vpnstatus
format = <label>

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5
